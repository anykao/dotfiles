set clipboard+=unnamed
set ignorecase
set incsearch
set hlsearch
set number
set surround

let mapleader=","

nmap <leader>r :action Run<CR>
nmap <leader>w :action NextProjectWindow<CR>
nmap <leader>f :action ToggleFullScreen<CR>
nmap <leader>e :action RecentFiles<cr>
nmap <leader>q :action HideAllWindows<CR>
nmap <leader>z :action ToggleDistractionFreeMode<CR>
nmap <leader>a :action Flutter.ReloadFlutterApp<CR>
nmap <leader>x :action Exit<CR>

nmap g;        :action JumpToLastChange<CR>
nmap gr        :action ReformatCode<CR>

nmap ``         :action Back<CR>
nmap <leader>sv :source ~/.ideavimrc<CR>
nmap <M-p>      :action GotoFile<CR>
